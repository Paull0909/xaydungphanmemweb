@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mx-auto my-16 px-4">
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="bg-purple-600 text-white p-6 text-center">
                    <h4 class="text-2xl font-semibold">Reset Your Password</h4>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 text-center mb-6">
                        Enter your registered email address below, and we will send you instructions to reset your password.
                    </p>

                    <!-- Validation Summary -->
                    <form method="post" asp-action="ForgotPassword" asp-controller="Account" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>

                        <!-- Email Input -->
                        <div class="mb-4">
                            <label asp-for="Email" class="block text-sm font-semibold text-gray-700">Email Address</label>
                            <input asp-for="Email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="mt-6">
                            <button type="submit" class="w-full py-3 bg-purple-600 text-white text-lg font-semibold rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500">
                                Send Reset Link
                            </button>
                        </div>
                    </form>
                </div>
                <div class="bg-gray-100 p-4 text-center">
                    <p class="text-sm">
                        <a asp-controller="Account" asp-action="Login" class="text-purple-600 hover:underline">
                            Back to Login
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>