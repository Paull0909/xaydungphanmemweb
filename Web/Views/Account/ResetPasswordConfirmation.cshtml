﻿﻿﻿@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container mx-auto my-16 px-4">
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="bg-blue-600 text-white p-6 text-center">
                    <h4 class="text-2xl font-semibold">Password Reset Successful</h4>
                </div>
                <div class="p-6 text-center">
                    <p class="text-lg text-gray-600 mb-6">
                        Your password has been reset successfully. You can now log in to your account with your new password.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" asp-controller="Account" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Go to Login
                        </a>
                    </div>
                </div>
                <div class="bg-gray-100 p-4 text-center">
                    <p class="text-sm">
                        <strong>Need further assistance?</strong> Contact our
                        <a href="mailto:info@dotnettutorials.net" class="text-blue-600 hover:underline">
                            support team
                        </a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>