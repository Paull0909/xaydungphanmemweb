﻿﻿@{
    ViewData["Title"] = ViewBag.Message ?? "Resend Confirmation Email";
}

<div class="container mx-auto my-16 px-4">
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <!-- Hiển thị thông báo cho người dùng -->
            <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">@ViewBag.Message</h2>
            <!-- Card để nhập lại email -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="p-6">
                    <p class="text-lg text-gray-600 mb-6">
                        If you haven't received your confirmation email, please enter
                        your email address below. We'll send you another link to verify
                        your account.
                    </p>

                    <form asp-controller="Account" asp-action="ResendConfirmationEmail" method="post">
                        <div class="mb-4">
                            <label for="emailInput" class="block text-sm font-semibold text-gray-700">Email Address</label>
                            <input type="email"
                                   id="emailInput"
                                   name="Email"
                                   class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   placeholder="yourname@example.com"
                                   required />
                        </div>

                        <button class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" type="submit">
                            @ViewBag.Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>