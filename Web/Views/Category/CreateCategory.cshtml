@model Application.DTO.Categorys.CreateUpdateCateoryRequest
<h2>Thêm Loại Sản Phẩm</h2>

<form asp-action="CreateCategory" method="post">
   <div>
        <h3>@ViewBag.Category</h3>
   </div>
    <div class="form-group">
        <label asp-for="type_name" class="control-label"></label>
        <input asp-for="type_name" class="form-control" />
        <span asp-validation-for="type_name" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="CreateCategory" asp-controller="Category" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
