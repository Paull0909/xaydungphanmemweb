@model Application.DTO.Products.CreateUpdateProductRequest

<h1>@ViewData["Title"]</h1>

<!-- Modal Chỉnh sửa Sản Phẩm -->
<div id="editProductModal" class="fixed inset-0 z-50 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-2xl max-h-full overflow-y-auto">
        <h2 class="text-2xl font-bold mb-6">Chỉnh sửa sản phẩm</h2>
        <form asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.product_id" method="post" enctype="multipart/form-data">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <div class="grid grid-cols-2 gap-2">
                <!-- Tên sản phẩm -->
                <div class="mb-4 col-span-2">
                    <label class="block mb-2 text-sm font-medium">Tên sản phẩm</label>
                    <input type="text"
                           class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                           asp-for="product_name" />
                    <span asp-validation-for="product_name" class="text-danger"></span>
                </div>

                <!-- Giá -->
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium">Giá</label>
                    <input type="number" min="0"
                           class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                           asp-for="price" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <!-- Giảm giá -->
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium">Giảm giá (%)</label>
                    <input type="number" min="0"
                           class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                           asp-for="discount" />
                    <span asp-validation-for="discount" class="text-danger"></span>
                </div>

                <!-- Trạng thái sản phẩm -->
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium">Trạng thái</label>
                    <select class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            asp-for="status">
                        <option value="1">Hết hàng</option>
                        <option value="2">Đã bán</option>
                        <option value="3">Đang bán</option>
                    </select>
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>

                <!-- Sản phẩm nổi bật -->
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-medium">Sản phẩm nổi bật</label>
                    <select class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            asp-for="IsFeatured">
                        <option value="1">Có</option>
                        <option value="0">Không</option>
                    </select>
                    <span asp-validation-for="IsFeatured" class="text-danger"></span>
                </div>

                <!-- Danh mục -->
                <div class="mb-4 col-span-2">
                    <label class="block mb-2 text-sm font-medium">Danh mục</label>
                    <select class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            asp-for="type_id">
                        <option value="">Chọn danh mục</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.type_id" selected="@((category.type_id == Model.type_id) ? "selected" : "")">
                                @category.type_name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="type_id" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="mb-4 col-span-2">
                    <label class="block mb-2 text-sm font-medium">Mô tả</label>
                    <textarea class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                              asp-for="Desdescription" placeholder="Nhập mô tả cho sản phẩm..." rows="3"></textarea>
                    <span asp-validation-for="Desdescription" class="text-danger"></span>
                </div>

                <!-- Mã quảng cáo -->
                <div class="mb-4 col-span-2">
                    <label class="block mb-2 text-sm font-medium">Mã quảng cáo</label>
                    <select class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            asp-for="advertisement_id">
                        <option value="">Chọn quảng cáo</option>
                        @if (Model.Advertisements != null)
                        {
                            foreach (var advertisement in Model.Advertisements)
                            {

                                <option value="@advertisement.id" selected="@(advertisement.id == Model.advertisement_id ? "selected" : "")">
                                    @advertisement.title
                                </option>
                            }
                        }
                        else
                        {
                            <option value="">Không có quảng cáo nào</option>
                        }
                    </select>
                    <span asp-validation-for="advertisement_id" class="text-danger"></span>
                </div>

                <div class="mb-4 col-span-2">
                    <label class="block mb-2 text-sm font-medium">Màu sắc, Size và Số lượng</label>
                    <div id="colorSizeContainer">
                        <!-- Lặp qua các variants -->
                        @for (int i = 0; i < Model.variants.Count; i++)
                        {
                            var variant = Model.variants[i];

                            <div class="variant-container flex items-center gap-4 mb-2" id="variant-@i">
                                <!-- Nhập màu sắc -->
                                <input type="text"
                                       class="w-1/4 p-3 border border-gray-300 rounded-lg"
                                       placeholder="Nhập màu sắc"
                                       name="variants[@i].Name"
                                       value="@variant.Name" />  <!-- Hiển thị màu sắc hiện tại -->
                                <!-- Lặp qua các size của mỗi variant -->
                                @foreach (var size in variant.Size)
                                {
                                        <!-- Nhập size -->
                                        <input type="text"
                                               class="w-1/4 p-3 border border-gray-300 rounded-lg"
                                               placeholder="Nhập size"
                                               name="variants[@i].Size[@size.Name].Name"
                                               value="@size.Name" />  <!-- Hiển thị tên size hiện tại -->
                                        <!-- Nhập số lượng -->
                                        <input type="number" min="0"
                                               class="w-1/4 p-3 border border-gray-300 rounded-lg"
                                               placeholder="Nhập số lượng"
                                               name="variants[@i].Size[@size.Name].Quantity"
                                               value="@size.quantity" />  <!-- Hiển thị số lượng hiện tại -->
                                }

                                <!-- Nếu đây là biến thể thứ 2 trở đi, hiển thị nút xóa -->
                                @if (i > 0)
                                {
                                    <button type="button" class="px-4 py-2 bg-red-500 text-white rounded-lg" onclick="removeColorSizeField(this)">Xóa</button>
                                }
                            </div>
                        }
                    </div>

                    <!-- Nút thêm màu sắc, size và số lượng -->
                    <button type="button"
                            class="px-4 py-2 bg-green-500 text-white rounded-lg"
                            onclick="addColorSizeField()">
                        Thêm màu, size và số lượng
                    </button>
                </div>



                <!-- Hình ảnh sản phẩm -->
                <div id="imageFormContainer" class="mb-4 col-span-2 ">
                    @for (int i = 0; i < Model.img.Count; i++)
                    {
                        <div>
                            <label class="block mb-2 text-sm font-medium" for="ImagePath">Hình ảnh sản phẩm</label>
                            <input type="text" class="w-full p-3 border border-gray-300 rounded-lg"
                                   asp-for="img[i].ImagePath" placeholder="Nhập tên hình ảnh" />

                            <label class="block mb-2 text-sm font-medium" for="Caption">Caption</label>
                            <input type="text" class="w-full p-3 border border-gray-300 rounded-lg"
                                   asp-for="img[i].Caption" placeholder="Nhập Caption cho hình ảnh" />
                        </div>
                    }
                </div>
            </div>
            <!-- Nút thêm hình ảnh -->
            <button type="button" class="px-4 py-2 bg-green-500 text-white rounded-lg" onclick="addImageField()">Thêm Hình ảnh</button>
            <div class="flex justify-end mt-6">
                <a asp-controller="Product" asp-action="GetAllProduct" type="button"
                   class="px-6 py-3 bg-red-500 text-white rounded-lg shadow-md hover:bg-red-600 transition"
                   onclick="closeAddProductModal()">
                    Hủy
                </a>
                <button type="submit" class="ml-3 px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>
