@model Application.DTO.Products.CreateUpdateProductRequest

<div class="max-w-lg mx-auto p-4 bg-white rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Thêm Sản Phẩm</h2>
    <div>
        <h3>@ViewBag.Product</h3>
    </div>
    <form asp-action="CreateProduct" asp-controller="Product" method="post" class="space-y-4">
        <div>
            <label for="product_name" class="block text-sm font-medium">Tên sản phẩm</label>
            <input asp-for="product_name" class="w-full p-2 border rounded" />
            <span asp-validation-for="product_name" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label for="price" class="block text-sm font-medium">Giá</label>
            <input asp-for="price" type="number" class="w-full p-2 border rounded" />
            <span asp-validation-for="price" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label for="discount" class="block text-sm font-medium">Giảm giá (%)</label>
            <input asp-for="discount" type="number" class="w-full p-2 border rounded" />
            <span asp-validation-for="discount" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label for="status" class="block text-sm font-medium">Trạng thái</label>
            <input asp-for="status" type="number" class="w-full p-2 border rounded" />
            <span asp-validation-for="status" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label for="type_id" class="block text-sm font-medium">Loại sản phẩm</label>
            <input asp-for="type_id" type="number" class="w-full p-2 border rounded" />
            <span asp-validation-for="type_id" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label for="description" class="block text-sm font-medium">Mô tả</label>
            <textarea asp-for="Desdescription" class="w-full p-2 border rounded"></textarea>
        </div>
        <div>
            <label for="advertisement_id" class="block text-sm font-medium">Quảng cáo ID</label>
            <input asp-for="advertisement_id" type="number" class="w-full p-2 border rounded" />
        </div>
        <button type="submit" class="bg-blue-500 text-white p-2 rounded">Thêm sản phẩm</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

