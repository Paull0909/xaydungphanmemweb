@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}
<div class="p-8 sm:ml-32 w-full">
    <div class="border-2 border-gray-200 border rounded-lg dark:border-gray-700 w-full sm:max-w-8xl mx-auto">
        <div class="bg-gray-100 dark:bg-gray-900 p-4 w-full max-w-full relative">
            <div class="flex justify-center w-full">
                <h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100 ">
                    Product List
                </h1>
            </div>

            <div class="absolute top-4 right-4">
                <a asp-action="Create" asp-controller="Product" class="px-4 py-2 text-sm text-white bg-blue-600 rounded hover:bg-blue-500 dark:bg-blue-500 dark:hover:bg-blue-400">
                    Create
                </a>
            </div>

            <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8">
                <table class="w-full text-sm text-left text-gray-700 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-800 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-2 py-4 text-left min-w-[150px]">Product Id</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[200px]">Product Name</th> <!-- Tăng chiều rộng -->
                            <th scope="col" class="px-2 py-4 text-left min-w-[120px]">Price</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[120px]">Discount</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[120px]">Status</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[120px]">Is Featured</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[150px]">Category</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[300px]">Description</th> <!-- Tăng chiều rộng cho Description -->
                            <th scope="col" class="px-2 py-4 text-left min-w-[150px]">Advertisement Id</th>
                            <th scope="col" class="px-2 py-4 text-left min-w-[150px]">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <td class="px-2 py-4 text-left">@item.product_id</td>
                                <td class="px-2 py-4 text-left">@item.product_name</td>
                                <td class="px-2 py-4 text-left">@item.price</td>
                                <td class="px-2 py-4 text-left">@item.discount</td>
                                <td class="px-2 py-4 text-left">@item.status</td>
                                <td class="px-2 py-4 text-left">@(@item.IsFeatured == 1 ? "Yes" : "No")</td>
                                <td class="px-2 py-4 text-left">@item.type_id</td>
                                <td class="px-2 py-4 text-left break-words max-w-xs">@item.Desdescription</td> <!-- Tăng chiều rộng cho Description -->
                                <td class="px-2 py-4 text-left">@item.advertisement_id</td>
                                <td class="px-2 py-4 text-left">
                                    <a asp-action="EditProduct" asp-controller="Product" asp-route-id="@item.product_id" class="px-3 py-1 text-xs text-white bg-blue-600 rounded dark:bg-blue-500">
                                        Edit
                                    </a>
                                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.product_id" class="px-3 py-1 text-xs text-white bg-red-600 rounded dark:bg-red-500">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
