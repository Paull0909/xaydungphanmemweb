@model Web.Models.Role.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<div class="p-6 sm:ml-64 bg-gray-50 min-h-screen">
    <div class="flex flex-col flex-1 overflow-hidden">
        <!-- Edit Role Form -->
        <div class="bg-white rounded-lg shadow mb-6" id="edit-role">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">Edit Role</h2>
            </div>
            <div class="p-6">
                <form method="post">
                    <div class="space-y-4">
                        <div>
                            <label asp-for="Id" class="block text-sm font-medium text-gray-700">ID</label>
                            <input asp-for="Id" readonly
                                   class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md shadow-sm text-gray-500 sm:text-sm cursor-not-allowed" />
                        </div>
                        <div>
                            <label asp-for="RoleName" class="block text-sm font-medium text-gray-700">Role Name</label>
                            <input asp-for="RoleName"
                                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                            <span asp-validation-for="RoleName" class="text-red-500"></span>
                        </div>
                        <div>
                            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                            <input asp-for="Description"
                                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        </div>
                        <div class="pt-4 flex space-x-3">
                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition duration-200 flex items-center">
                                <i class="fas fa-save mr-2"></i> Update
                            </button>
                            <a asp-action="ListRoles" class="bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded transition duration-200 flex items-center">
                                <i class="fas fa-times mr-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </form>

                <!-- Users in this role section -->
                <div class="mt-8">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Users in this role</h3>
                    <div class="border border-gray-200 rounded-md">
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <div class="p-4 border-b border-gray-200">
                                    <div class="flex items-center">
                                        <i class="fas fa-user text-blue-500 mr-2"></i>
                                        <span>@user</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="p-4">
                                <p class="text-gray-500">No users assigned to this role.</p>
                            </div>
                        }
                        <div class="p-4">
                            <a asp-action="EditUsersInRole" asp-route-roleId="@Model.Id"
                               class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition duration-200 flex items-center justify-center">
                                <i class="fas fa-user-plus mr-2"></i> Add or Remove Users From This Role
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
