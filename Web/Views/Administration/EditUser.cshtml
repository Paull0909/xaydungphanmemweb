@model Web.Models.User.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<!-- Edit User Form -->
<main class="p-6 md:ml-32 bg-gray-50 dark:bg-gray-900 min-h-screen w-full">
    <div class="bg-white rounded-lg shadow mb-6" id="edit-user">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800">Edit User</h2>
        </div>
        <div class="p-6">
            <form method="post">
                <div class="space-y-4">
                    <input type="hidden" asp-for="Id" />
                    <div>
                        <label asp-for="Id" class="block text-sm font-medium text-gray-700">ID</label>
                        <input asp-for="Id" class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md shadow-sm text-gray-500 sm:text-sm cursor-not-allowed" readonly />
                    </div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="UserName" class="block text-sm font-medium text-gray-700">UserName</label>
                        <input asp-for="UserName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                        <input asp-for="FirstName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input asp-for="LastName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    </div>
                    <div class="pt-4 flex space-x-3">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition duration-200 flex items-center">
                            <i class="fas fa-save mr-2"></i> Update
                        </button>
                        <a asp-action="ListUsers" class="bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded transition duration-200 flex items-center">
                            <i class="fas fa-times mr-2"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>

            <!-- User Roles Section -->
            <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900 mb-4">User Roles</h3>
                <div class="border border-gray-200 rounded-md">
                    <div class="p-4 border-b border-gray-200">
                        @if (Model.Roles.Any())
                        {
                            @foreach (var role in Model.Roles)
                            {
                                <div class="flex items-center">
                                    <span>@role</span>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500">None at the moment</p>
                        }
                    </div>
                    <div class="p-4">
                        <a asp-action="ManageUserRoles" asp-controller="Administration" asp-route-UserId="@Model.Id"
                           class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition duration-200 flex items-center justify-center">
                            <i class="fas fa-users-cog mr-2"></i> Manage Roles
                        </a>

                    </div>
                </div>
                <!-- User Claims Section -->
                <h3 class="text-lg font-medium text-gray-900 mb-4 mt-6">User Claims</h3>
                <div class="border border-gray-200 rounded-md">
                    <div class="p-4 border-b border-gray-200">
                        @if (Model.Claims.Any())
                        {
                            @foreach (var claim in Model.Claims)
                            {
                                <div class="flex items-center">
                                    <i class="fas fa-shield-alt text-blue-500 mr-2"></i>
                                    <span>@claim</span>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500">None at the moment</p>
                        }
                    </div>
                    <div class="p-4">
                        <a asp-action="ManageUserClaims" asp-controller="Administration" asp-route-UserId="@Model.Id"
                        class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition duration-200 flex items-center justify-center">
                            <i class="fas fa-clipboard-list mr-2"></i> Manage Claims
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>